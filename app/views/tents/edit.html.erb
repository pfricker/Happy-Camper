<div class="row">
  <% if @tent.errors.present? %>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <% @tent.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<br>
<div class="row">
  <div class="medium-6 medium-centered columns" id="box">
    <h2 class="text-center">Edit Tent</h2>

      <%= form_for @tent do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :brand %>
        <%= f.text_field :brand %>

        <%= f.label "Capacity" %>
        <%= f.select :capacity, options_for_select(1..8, @tent.capacity) %>

        <%= f.label :use %>
        <%= f.select :use, options_for_select(Tent::USE, @tent.use)%>

        <%= f.label :condition %>
        <%= f.select :condition, options_for_select(Tent::CONDITION, @tent.condition)%>

        <%= f.label :image %>
        <%= f.file_field :image %>

        <%= f.submit "Update", class: "button radius small" %>
      <% end %>

  </div>
</div>
